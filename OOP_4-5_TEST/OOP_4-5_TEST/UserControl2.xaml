             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OOP_4_5_TEST"
             mc:Ignorable="d" d:DesignWidth="210" Height="70">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="137*"/>
            <RowDefinition Height="163*"/>
        </Grid.RowDefinitions>
        <Button Style="{StaticResource ded}"  Content="My own search button" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="212"/>
        <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="Enter what you want to find, for example, the meaning of life" Width="210" Margin="0,32,0,0" Grid.RowSpan="2" Height="35" VerticalAlignment="Top"/>
    </Grid>
